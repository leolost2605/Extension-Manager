<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
  <id>io.github.leolost2605.extension-manager</id>

  <name>Extension Manager</name>
  <summary>Manage your extensions with ease</summary>

  <metadata_license>CC0-1.0</metadata_license>
  <project_license>GPL-3.0-or-later</project_license>

  <developer_name>Leonhard Kargl</developer_name>

  <supports>
    <control>pointing</control>
    <control>keyboard</control>
    <control>touch</control>
  </supports>

  <description>
    <p>
      Easily install and manage extensions from a curated repository. This app currently supports extensions for the top panel (called indicators), for the settings app and for the window manager.
    </p>
  </description>

  <launchable type="desktop-id">io.github.leolost2605.extension-manager.desktop</launchable>

  <content_rating type="oars-1.1" />

